#include <stdio.h>
#include <stdlib.h>

// Função para jogar o jogo da velha
void jogarJogo(int *vitoriasJogador1, int *vitoriasJogador2) {
    // Declaração das variáveis locais
    int l, c, linha, coluna, jogador = 1, ganhou = 0, jogadas = 0, i;
    char jogo[3][3], nome1[100], nome2[100];

    printf("Informe a quantidade de jogadores: (1/2) ");
    scanf("%d", &i);
    fflush(stdin);

    switch (i) {
        case 1:
            printf("Digite seu nome: ");
            scanf("%s", nome1);
            fflush(stdin);
            break;
        case 2:
            printf("Digite o nome do primeiro jogador: ");
            scanf("%s", nome1);
            fflush(stdin);
            printf("Digite o nome do segundo jogador: ");
            scanf("%s", nome2);
            fflush(stdin);
            break;
        default:
            printf("Número inválido");
    };

    // Inicialização do tabuleiro
    for (l = 0; l < 3; l++) {
        for (c = 0; c < 3; c++) {
            jogo[l][c] = ' ';
        }
    }

    // Loop do jogo
    do {
        // Impressão do tabuleiro
        printf("\n\n\t 0   1   2\n\n");
        for (l = 0; l < 3; l++) {
            for (c = 0; c < 3; c++) {
                if (c == 0)
                    printf("\t");
                printf(" %c ", jogo[l][c]);
                if (c < 2)
                    printf("|");
                if (c == 2)
                    printf("  %d", l);
            }
            if (l < 2)
                printf("\n\t-----------");
            printf("\n");
        }

        // Leitura das coordenadas do jogador
        do {
            printf("\n%s = 0\n%s = X\n", nome1 , nome2);
          printf("\n%s: Digite a linha e a coluna que deseja jogar: ", (jogador == 1) ? nome1 : nome2);
            scanf("%d%d", &linha, &coluna);
        } while (linha < 0 || linha > 2 || coluna < 0 || coluna > 2 || jogo[linha][coluna] != ' ');

        // Marcação da jogada no tabuleiro
        if (jogador == 1) {
            jogo[linha][coluna] = '0';
            jogador++;
        } else {
            jogo[linha][coluna] = 'X';
            jogador = 1;
        }
        jogadas++;

        // Verificação do vencedor
        if ((jogo[0][0] == jogo[0][1] && jogo[0][1] == jogo[0][2] && jogo[0][0] != ' ') ||
            (jogo[1][0] == jogo[1][1] && jogo[1][1] == jogo[1][2] && jogo[1][0] != ' ') ||
            (jogo[2][0] == jogo[2][1] && jogo[2][1] == jogo[2][2] && jogo[2][0] != ' ') ||
            (jogo[0][0] == jogo[1][0] && jogo[1][0] == jogo[2][0] && jogo[0][0] != ' ') ||
            (jogo[0][1] == jogo[1][1] && jogo[1][1] == jogo[2][1] && jogo[0][1] != ' ') ||
            (jogo[0][2] == jogo[1][2] && jogo[1][2] == jogo[2][2] && jogo[0][2] != ' ') ||
            (jogo[0][0] == jogo[1][1] && jogo[1][1] == jogo[2][2] && jogo[0][0] != ' ') ||
            (jogo[0][2] == jogo[1][1] && jogo[1][1] == jogo[2][0] && jogo[0][2] != ' ')) {
            printf("\nParabens! %s venceu!\n", (jogador == 1) ? nome1 : nome2);
            if (jogador == 1) {
                (*vitoriasJogador1)++;
            } else {
                (*vitoriasJogador2)++;
            }
            ganhou = 1;
        }
    } while (ganhou == 0 && jogadas < 9);

    // Impressão final do tabuleiro
    printf("\n\n\t 0   1   2\n\n");
    for (l = 0; l < 3; l++) {
        for (c = 0; c < 3; c++) {
            if (c == 0)
                printf("\t");
            printf(" %c ", jogo[l][c]);
            if (c < 2)
                printf("|");
            if (c == 2)
                printf("  %d", l);
        }
        if (l < 2)
            printf("\n\t-----------");
        printf("\n");
    }

    // Mensagem de empate, se for o caso
    if (ganhou == 0)
        printf("\nO jogo finalizou sem vencedor!\n");
}

// Função para ver o ranking de vitórias dos jogadores
void verRanking(int vitoriasJogador1, int vitoriasJogador2) {
    printf("\n=== RANKING ===\n");
    printf("Jogador 1: %d vitórias\n", vitoriasJogador1);
    printf("Jogador 2: %d vitórias\n", vitoriasJogador2);
}

// Função para mostrar os créditos
void mostrarCreditos() {
    printf("\nDesenvolvido por Five Devs...\n");
}

// Função principal
int main() {
    int opcao,vitoriasJogador1 = 0, vitoriasJogador2 = 0, i;
    char nome1[100], nome2[100];

    // Menu principal do programa
    do {
        printf("\nMenu:\n");
        printf("1. Jogar\n");
        printf("2. Ver Ranking\n");
        printf("3. Créditos\n");
        printf("4. Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);

        // Switch para executar a opção escolhida
        switch (opcao) {
            case 1:
                jogarJogo(&vitoriasJogador1, &vitoriasJogador2);
                break;
            case 2:
                verRanking(vitoriasJogador1, vitoriasJogador2);
                break;
            case 3:
                mostrarCreditos();
                break;
            case 4:
                printf("Saindo...\n");
                break;
            default:
                printf("Opcao invalida! Escolha novamente.\n");
                break;
        }

    } while (opcao != 4); // Loop continua até o usuário escolher sair

}
